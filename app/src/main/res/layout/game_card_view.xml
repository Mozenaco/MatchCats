<?xml version="1.0" encoding="utf-8"?>
<com.wajahatkarim3.easyflipview.EasyFlipView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/easyFlipView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    app:flipDuration="400"
    app:flipEnabled="true"
    app:flipFrom="right"
    app:flipOnTouch="true"
    app:flipType="horizontal"
    app:layout_constraintBottom_toTopOf="@id/cardB1"
    app:layout_constraintEnd_toStartOf="@id/cardA2"
    app:layout_constraintHorizontal_chainStyle="spread"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="spread"
    app:layout_constraintVertical_weight="1">

    <!-- Back Layout Goes Here -->
    <include layout="@layout/back" />

    <!-- Front Layout Goes Here -->
    <include layout="@layout/front" />

</com.wajahatkarim3.easyflipview.EasyFlipView>